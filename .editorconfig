# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# all files
[*]
end_of_line = lf
charset = utf-8
max_line_length = 79
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# python files
[*.py]
max_line_length = 79

# npm pacage files
[package.json]
indent_style = space
indent_size = 2
